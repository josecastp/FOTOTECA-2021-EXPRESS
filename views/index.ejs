<!DOCTYPE html>
<html>
<title>W3.CSS</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<body>
  <header>
    <div>
      <h1>Fotogalería</h1>
    </div>
    <div class="w3-bar w3-black">
      <a class="w3-bar-item w3-button" href="/anadir" style="width:15% ">Añadir Imagen</a>
      <a class="w3-bar-item w3-button" href="/mostrar" style="width:15% ;color:greenyellow">Mostrar Imágenes</a> 
    </div>  
  </header>
    <div class="w3-row"> 
        <div class="w3-panel w3-white">
          <% todasLasImagenes %> 
        <% todasLasImagenes.forEach(function(imagen) { %>
            <div class="w3-card-4" style="width: 200px">
              <h2> <%= imagen.titulo %>  </h2>
                <img src="<%= imagen.url %>" alt="foto" style="width: 100px; height:100px">
                <p>Fecha: <%= imagen.fecha %>  </p>
                <div class="w3-container w3-center">
                    
                </div>
            </div>

            <% }); %>
        </div>
              <p>Total de imagenes encontradas: <%= totalImagenes %></p>
        </div>

</body> 
</html>
